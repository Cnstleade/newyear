/* pages/dm/dm.wxss */

.main {
  width: 100%;
  height: 1372rpx;
  background-image: url('http://cdn.jd.tiqianfu.com/bg.jpg');
  background-repeat: no-repeat;
  background-size: cover;
  padding: 30px 0;
}

.card {
  width: 650rpx;
  height: 800rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;  
}

.section {
  width: 100%;
}

.question-input-area {
  display: flex;
  flex-direction: column;
}

.question-image {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 20rpx 20rpx;
}

.question-title {
	background-color: rgba(0, 0, 0, .5);
  border-radius: 5px;
  margin: 20rpx 20rpx;
  font-size: 40rpx;
  line-height: 60rpx;
  padding: 10rpx;
}

.question-title button {
  text-align: left;
}

.weui-btn {
  margin: 0 50px;
}

.title-input-counter {
  color: #fff;
}

.dmArea {
  display: flex;
  flex-direction: column;
  margin:20rpx 0;
  background-color: rgba(255, 255, 255, 0.5);
  background-clip: border-box;
  border: 1px solid rgba(0, 0, 0, 0.125);
  border-radius: 10px;

}

.dmArea-top {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
}

.dmArea-top image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}

.dmArea-top .name {
  font-size: 30rpx;
  margin-left: 10rpx;
}

.dmArea-top .time {
  font-size: 30rpx;
  flex-grow: 1;
  text-align: right;
  margin-right: 50rpx;
}

.dmArea-title {
  display: flex;
  flex-direction: column;
  
}

.dmArea-title text {
  font-size: 40rpx;
  line-height: 60rpx;
  text-indent: 40rpx;
}
.imgView{
  text-align: center;
  padding-top:20rpx; 
}
.imgView image{
  width: 300rpx;
  height: 300rpx;
}

.tishi{
  color:red;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
}

.btn{
  width: 130rpx;
  height: 130rpx;
}